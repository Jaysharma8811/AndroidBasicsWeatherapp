<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen"
    tools:context=".activity.SplashScreenActivity">
    
    <ImageView
        android:id="@+id/imageViewWhiteCloudSplash"
        android:layout_width="211dp"
        android:layout_height="140dp"
        android:layout_marginTop="268dp"
        android:src="@drawable/white_cloud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/SplashScreenTextWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageViewWhiteCloudSplash"
        app:layout_constraintStart_toStartOf="@+id/imageViewWhiteCloudSplash"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWhiteCloudSplash"
        android:text="@string/SplashScreenTextWeather"
        android:fontFamily="@font/merriweathersans_bold"
        android:layout_marginTop="67dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/SplashScreenTextDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/SplashScreenTextDesign"
        android:fontFamily="@font/merriweathersans_bold"
        android:layout_marginBottom="30dp"

        android:textColor="@color/white"
        android:textAlignment="center"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>